<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">

    <ImageView
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/artistNameTv_artists"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:foregroundTint="@color/main_color"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0."
        tools:text="hello ahmed" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginEnd="4dp"
        android:alpha="0.5"
        android:src="@drawable/right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/artistNameTv_artists"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/artistNameTv_artists"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>